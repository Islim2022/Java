package com.HaneiIslim.SaveTravels.controllers;

import java.util.List;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.HaneiIslim.SaveTravels.models.Expense;
import com.HaneiIslim.SaveTravels.services.ExpenseService;

@RestController
public class Controller {
    private final ExpenseService ExpenseService;
    public Controller(ExpenseService ExpenseService){
        this.ExpenseService = ExpenseService;
    }
    
    @RequestMapping("/expenses")
    public List<Expense> index() {
        return ExpenseService.allExpenses();
    }
    
    @RequestMapping(value="/expenses", method=RequestMethod.POST)
    public Expense create(@RequestParam(value="expense") String exp, 
    		@RequestParam(value="description") String desc, 
    		@RequestParam(value="vendor") String vendor, 
    		@RequestParam(value="amount") double price) {
    	
        Expense expense = new Expense(exp, desc, vendor, price);
        return ExpenseService.createExpense(expense);
    }
    
//    @RequestMapping("/expenses/{id}")
//    public Book show(@PathVariable("id") Long id) {
//    	
//        Book book = BookService.findBook(id);
//        return book;
//    }
    
//    @RequestMapping(value="/expenses/{id}", method=RequestMethod.PUT)
//    public Expense update(@PathVariable("id") Long id, @RequestParam(value="title") String title, @RequestParam(value="description") String desc, @RequestParam(value="vendor") String vendor, @RequestParam(value="amount") double price) {
//        Expense book = ExpenseService.updateExpense(id, title, desc, vendor, price);
//        return book;
//    }
//    
    @RequestMapping(value="/expenses/{id}", method=RequestMethod.DELETE)
    public void destroy(@PathVariable("id") Long id) {
        ExpenseService.deleteBook(id);
    }

}
